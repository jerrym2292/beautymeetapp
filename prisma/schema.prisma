generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProviderApplication {
  id            String            @id @default(cuid())
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  fullName      String
  phone         String
  email         String?
  dob           DateTime?
  licenseNumber String?
  licenseState  String?
  licenseUrl    String?
  idUrl         String?
  address1      String?
  address2      String?
  city          String?
  state         String?
  zip           String?
  status        ApplicationStatus @default(PENDING)
  notes         String?
  provider      Provider?
}

model Provider {
  id                   String              @id @default(cuid())
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  applicationId        String              @unique
  accessToken          String              @unique
  displayName          String
  bio                  String?
  instagram            String?
  mode                 ProviderMode
  baseAddress1         String
  baseAddress2         String?
  baseCity             String
  baseState            String
  baseZip              String
  maxTravelMiles       Int?
  travelRateCents      Int                 @default(100)
  subscriptionActive   Boolean             @default(false)
  stripeSubscriptionId String?             @unique
  stripeAccountId      String?             @unique
  stripeChargesEnabled Boolean             @default(false)
  stripePayoutsEnabled Boolean             @default(false)
  active               Boolean             @default(true)
  referredById         String?
  referralPaid         Boolean             @default(false)
  bookings             Booking[]
  PortfolioImage       PortfolioImage[]
  referredBy           Affiliate?          @relation("TechReferrals", fields: [referredById], references: [id])
  application          ProviderApplication @relation(fields: [applicationId], references: [id])
  services             Service[]
  user                 User?
}

model Service {
  id          String           @id @default(cuid())
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  providerId  String
  category    ServiceCategory
  name        String
  durationMin Int
  priceCents  Int
  active      Boolean          @default(true)
  bookings    Booking[]
  questions   IntakeQuestion[]
  provider    Provider         @relation(fields: [providerId], references: [id])
}

model IntakeQuestion {
  id        String         @id @default(cuid())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  serviceId String
  text      String
  required  Boolean        @default(true)
  type      String         @default("TEXT")
  answers   IntakeAnswer[]
  service   Service        @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}

model IntakeAnswer {
  id         String         @id @default(cuid())
  createdAt  DateTime       @default(now())
  bookingId  String
  questionId String
  text       String
  question   IntakeQuestion @relation(fields: [questionId], references: [id])
  booking    Booking        @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

model Customer {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fullName  String
  phone     String   @unique
  email     String?

  // Customer-to-customer referrals
  referralCode           String   @unique @default("LEGACY")
  referredByCustomerId   String?
  referredByCustomer     Customer?  @relation("CustomerReferrals", fields: [referredByCustomerId], references: [id])
  referredCustomers      Customer[] @relation("CustomerReferrals")
  referralRewardGranted  Boolean    @default(false)
  nextBookingDiscountPct Int        @default(0)

  bookings Booking[]
}

model Booking {
  id                String        @id @default(cuid())
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  status            BookingStatus @default(PENDING)
  providerId        String
  customerId        String
  serviceId         String
  startAt           DateTime
  notes             String?
  isMobile          Boolean       @default(false)
  customerZip       String
  estimatedMiles    Int?
  servicePriceCents Int

  // Discounts
  discountPctApplied Int @default(0)
  discountCents      Int @default(0)

  platformFeeCents         Int
  stripeFeeCents           Int
  depositCents             Int
  travelFeeCents           Int
  totalCents               Int
  affiliateId              String?
  affiliateCommissionCents Int     @default(0)

  // Completion + charging
  providerConfirmedAt DateTime?
  customerConfirmedAt DateTime?
  autoChargeAt        DateTime?
  issueReportedAt     DateTime?
  completedAt         DateTime?

  customerConfirmToken String? @unique
  customerCancelToken  String? @unique
  customerIssueToken   String? @unique

  stripeCustomerId      String?
  stripePaymentMethodId String?

  payments Payment[]

  affiliate     Affiliate?     @relation("BookingReferrals", fields: [affiliateId], references: [id])
  service       Service        @relation(fields: [serviceId], references: [id])
  customer      Customer       @relation(fields: [customerId], references: [id])
  provider      Provider       @relation(fields: [providerId], references: [id])
  intakeAnswers IntakeAnswer[]
}

model Payment {
  id              String        @id @default(cuid())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  status          PaymentStatus @default(REQUIRES_PAYMENT)
  type            PaymentType   @default(DEPOSIT)
  amountCents     Int
  currency        String        @default("USD")
  provider        String        @default("stripe")
  paymentIntentId String?
  latestChargeId  String?

  bookingId String @default("LEGACY")
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([paymentIntentId])
}

model StripeWebhookEvent {
  id        String   @id // Stripe event id
  createdAt DateTime @default(now())
  type      String
}

model AdminAuditLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  adminId   String
  action    String   // e.g., "APPROVE_PROVIDER", "REFUND_PAYMENT", "HIDE_PROVIDER"
  targetId  String   // e.g., providerId, paymentId, appId
  details   String?  // JSON string or summary text
  user      User     @relation(fields: [adminId], references: [id])
}

model Affiliate {
  id            String     @id @default(cuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  code          String     @unique
  fullName      String
  email         String     @unique
  phone         String?
  balanceCents  Int        @default(0)
  bookings      Booking[]  @relation("BookingReferrals")
  techReferrals Provider[] @relation("TechReferrals")
  user          User?
}

model User {
  id           String               @id @default(cuid())
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  email        String               @unique
  passwordHash String
  role         UserRole             @default(CUSTOMER)
  providerId   String?              @unique
  affiliateId  String?              @unique
  resetTokens  PasswordResetToken[]
  sessions     Session[]
  auditLogs    AdminAuditLog[]
  affiliate    Affiliate?           @relation(fields: [affiliateId], references: [id])
  provider     Provider?            @relation(fields: [providerId], references: [id])
}

model Session {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  userId    String
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  expiresAt DateTime
  usedAt    DateTime?
  userId    String
  token     String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PortfolioImage {
  id         String   @id
  createdAt  DateTime @default(now())
  providerId String
  url        String
  caption    String?
  Provider   Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
}

enum ServiceCategory {
  LASHES_BROWS
  NAILS
}

enum ProviderMode {
  FIXED
  MOBILE
  BOTH
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum BookingStatus {
  PENDING
  APPROVED
  DECLINED
  CANCELLED
  NO_SHOW
  COMPLETED
}

enum PaymentStatus {
  REQUIRES_PAYMENT
  AUTHORIZED
  CAPTURED
  REFUNDED
  VOIDED
}

enum PaymentType {
  DEPOSIT
  REMAINDER
}

enum UserRole {
  CUSTOMER
  PROVIDER
  ADMIN
  AFFILIATE
}
